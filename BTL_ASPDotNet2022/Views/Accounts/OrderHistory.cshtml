@model IEnumerable<BTL_ASPDotNet2022.Models.Order>

@{
    ViewData["Title"] = "Order history:";
}
<style>
    tr:hover{
        background-color: lightgray;
    }
</style>

<h1>Purchase history:</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderStatus)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr onclick="document.location.href='/Orders/Details/@item.Id'">
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                <span class="@item.OrderStatus">@Html.DisplayFor(modelItem => item.OrderStatus)</span>
            </td>
        </tr>
}
    </tbody>
</table>
